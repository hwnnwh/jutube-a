header
    
    a(href="/").header__logo
        i.fab.fa-youtube 
        span  Jutube
    nav
      ul 
        if !loggedIn
          li 
            a(href="/login") LOGIN
          li 
            a(href="/join") JOIN
        else 
          li 
            a(href=`/users/${loggedInUser._id}`)
              if loggedInUser.avatarUrl 
                //- img.header__avatar(src="/"+loggedInUser.avatarUrl)                
                img.header__avatar(src=loggedInUser.avatarUrl)                
              else 
                //- img.header__avatar(src= "/" + "img/avatardefault2.png")
                img.header__avatar(src= "https://jutube-a.s3.us-east-2.amazonaws.com/images/25406be95c33217e849ef0393fb6f627")
          li
            a(href="/search") SEARCH
          li
            a(href="/videos/upload") UPLOAD
          li 
            a(href="/users/edit") EDIT PROFILE
          li 
            a(href="/users/logout") LOGOUT